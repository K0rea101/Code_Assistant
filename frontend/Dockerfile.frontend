# Frontend Dockerfile
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Build the frontend (bundle CodeMirror)
RUN npm run build

# Install serve to host static files
RUN npm install -g serve

# Expose port
EXPOSE 5173

# Serve the frontend
CMD ["serve", "-s", ".", "-l", "5173"]
